<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09Geometria.SferaPage"
             Title="SferaPage">
    <VerticalStackLayout>
        <Label Text="Inserisci raggio della sfera:" HorizontalOptions="Center"/>
        <Entry x:Name="entRaggio" HorizontalOptions="Center" WidthRequest="200"/>

        <Label Text="Volume Sfera:" HorizontalOptions="Center"/>
        <Entry x:Name="entVolume" HorizontalOptions="Center" WidthRequest="200" IsReadOnly="True"/>

        <Button Text="Calcola" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>