<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09Geometria.CuboPage"
             Title="CuboPage">
    <VerticalStackLayout>
        <Label Text="Inserisci lunghezza lato del cubo:" HorizontalOptions="Center"/>
        <Entry x:Name="entLato" HorizontalOptions="Center" WidthRequest="200"/>

        <Label Text="Volume cubo:" HorizontalOptions="Center"/>
        <Entry x:Name="entVolume" HorizontalOptions="Center" WidthRequest="200" IsReadOnly="True"/>

        <Label Text="Perimetro cubo:" HorizontalOptions="Center"/>
        <Entry x:Name="entPerimetro" HorizontalOptions="Center" WidthRequest="200" IsReadOnly="True"/>

        <Button Text="Calcola" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>