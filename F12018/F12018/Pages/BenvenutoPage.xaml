<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F12018.BenvenutoPage">

    <ScrollView>
        <Grid>
            <Image Source="image.jpg"
               Aspect="AspectFill"
               Opacity="0.7"
               Grid.RowSpan="1"
               Grid.ColumnSpan="1"
               IsVisible="True" />

            <StackLayout Padding="20">
                <Label Text="Benvenuto alla Formula 1!"
                   FontSize="28"
                   TextColor="White"
                   HorizontalOptions="Center" />
                <Button Text="Inizia"
                    BackgroundColor="#FF0000"
                    TextColor="White"
                    Margin="0,20,0,0"/>
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
