<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09Geometria.CerchioPage"
             Title="Cerchio">
    <VerticalStackLayout>
        <Label Text="Inserisci raggio del crchio:" HorizontalOptions="Center"/>
        <Entry x:Name="entRaggio" HorizontalOptions="Center" WidthRequest="200"/>

        <Label Text="Area Cerchio:" HorizontalOptions="Center"/>
        <Entry x:Name="entArea" HorizontalOptions="Center" WidthRequest="200" IsReadOnly="True"/>

        <Label Text="Circonferenza Cerchio:" HorizontalOptions="Center"/>
        <Entry x:Name="entCirconferenza" HorizontalOptions="Center" WidthRequest="200" IsReadOnly="True"/>

        <Button Text="Calcola" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>