<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verifica2.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="30">
            <Image Source="golf.jpg" WidthRequest="700" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label Text="Benvenuti all'Associazione MiniGolf" FontSize="Header" HorizontalOptions="Center"/>
            <Label Text="Un semplice programma che permette di consultare tutti i campi da MiniGolf presenti in Ticino" HorizontalOptions="Center"/>
            <HorizontalStackLayout VerticalOptions="Center" Spacing="20" Padding="10">
                <Image Source="logo.png" WidthRequest="150" VerticalOptions="Center" />
                <Label Text="Logo dell'Associaione MiniGolf" VerticalOptions="Center" FontAttributes="Bold" FontSize="Title" TextColor="Red"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
