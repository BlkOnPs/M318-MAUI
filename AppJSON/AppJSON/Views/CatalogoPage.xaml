<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppJSON.CatalogoPage"
             Title="CatalogoPage">
    <VerticalStackLayout Spacing="20" Padding="10 ">
        <Picker x:Name="pickLibri" Title="Seleziona libro" SelectedIndexChanged="pickLibri_SelectedIndexChanged"/>

        <Label Text="titolo"/>
        <Entry x:Name="entTitolo" TextChanged="entTitolo_TextChanged"/>

        <Label Text="autore"/>
        <Entry x:Name="entAutore" TextChanged="entAutore_TextChanged"/>

        <Label Text="pubblicazione"/>
        <Entry x:Name="entPubb" TextChanged="entPubb_TextChanged"/>

        <Button Text="Scrivi JSON" Clicked="Button_Clicked_1"/>
    </VerticalStackLayout>
</ContentPage>