<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09Geometria.PuntoPage"
             Title="PuntoPage">
    <VerticalStackLayout>
        <Label Text="Inserisci Valore X" HorizontalOptions="Center"/>
        <Entry x:Name="entX" WidthRequest="200"/>

        <Label Text="Inserisci Valore Y" HorizontalOptions="Center"/>
        <Entry x:Name="entY" WidthRequest="200"/>

        <Label Text="Distanza" HorizontalOptions="Center"/>
        <Entry x:Name="entDistanza" IsReadOnly="True" WidthRequest="200"/>
        
        <Button Text="Calcola" Clicked="Button_Clicked" WidthRequest="400"/>
    </VerticalStackLayout>
</ContentPage>