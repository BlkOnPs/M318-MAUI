<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListeApp.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="entFrutto" WidthRequest="300" HorizontalOptions="Center"/>
            <Editor x:Name="editFrutti" WidthRequest="300" HorizontalOptions="Center"/>
            <Picker x:Name="pickFrutti" WidthRequest="200" SelectedIndexChanged="pickFrutti_SelectedIndexChanged"/>
            <Entry Placeholder="Oggetto selezionato" x:Name="entSeleziona" WidthRequest="300" IsReadOnly="True"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
