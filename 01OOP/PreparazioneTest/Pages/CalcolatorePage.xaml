<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreparazioneTest.CalcolatorePage"
             Title="CalcolatorePage">
    <HorizontalStackLayout Spacing="400">
        <VerticalStackLayout HorizontalOptions="Start" Spacing="20" Margin="20">
        <Label 
            Text="Calcolatore Soglia Rumore"
            FontSize="Title"
            HorizontalOptions="Start" />
        <Label
            Text="Decibel (dB)"/>
        <Entry
            x:Name="entDB"
            Placeholder="Inserisci dB"
            HorizontalTextAlignment="Start"
            WidthRequest="300"/>
        <Label
            Text="Soglia"/>
        <Entry
            x:Name="entSoglia"
            HorizontalTextAlignment="Start"
            IsReadOnly="True"
            WidthRequest="300"/>
        <Button
            Text="Calcola"
            Clicked="Button_Clicked"
            WidthRequest="300"/>
        </VerticalStackLayout>
        <BoxView
            x:Name="boxQudrato"
            WidthRequest="200"
            HeightRequest="200"
            />
    </HorizontalStackLayout>
</ContentPage>