<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_09Geometria.RettangoloPage"
             Title="RettangoloPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20">
            <Label Text="Lato Minore" HorizontalOptions="Center"/>
            <Entry x:Name="entLatoMinore" WidthRequest="200"/>

            <Label Text="Lato Maggiore" HorizontalOptions="Center"/>
            <Entry x:Name="entLatoMaggiore" WidthRequest="200"/>

            <Label Text="Area" HorizontalOptions="Center"/>
            <Entry x:Name="entArea" IsReadOnly="True" WidthRequest="200"/>

            <Label Text="Perimetro" HorizontalOptions="Center"/>
            <Entry x:Name="entPerimetro" IsReadOnly="True" WidthRequest="200"/>
            <Button Text="Calcola" Clicked="Button_Clicked" WidthRequest="400"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>